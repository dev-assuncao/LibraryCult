@model LibraryCult.Models.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Title";

}


<h1>Edit</h1>

<div class="col-7">
    <input type="hidden" asp-for="Author.AuthorId" />
    <form asp-action="Edit" asp-route-id="@Model.Author.AuthorId" method="post">
        <div class="form-group">
            <label asp-for="Author.Name" class="control-label"></label>
            <input asp-for="Author.Name" class="form-control" />
            <span asp-validation-for="Author.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Author.BirthDate" class="control-label"></label>
            <input asp-for="Author.BirthDate" class="form-control" />
            <span asp-validation-for="Author.BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Author.Description" class="control-label"></label>
            <input asp-for="Author.Description" class="form-control" />
            <span asp-validation-for="Author.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Author.Category" class="control-label"></label>
            <select asp-for="Author.Category" asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))" class="form-control"></select>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn bg-primary text-white" value="Submit" asp-route-id="@Model.Author.AuthorId" />
        </div>
    </form>
</div>


@section Scripts {
    @{ await Html.PartialAsync("_ValidationScriptsPartial");}
}
